<project name="mobilizecarscore" default="dist" basedir="../">
	<property name="src" location="${basedir}/src"/>
	<property name="lib" location="${basedir}/lib"/>
	<property name="resources" location="${basedir}/resources"/>
	<property name="build" location="${basedir}/buildfiles"/>
	<property name="srcdomain" location="${src}/com/mobilize/core/domain/value"/>
	<property name="srccommon" location="${src}/com/mobilize/core/common"/>
	<property name="srcexception" location="${src}/com/mobilize/core/exception"/>

	<path id='compile.classpath'>
		<fileset dir = "${lib}">
			<include name = '*.jar'/>
		</fileset>
		
		
	</path>

	<target name="init">
		<mkdir dir = "${build}"/>		<!--  Creating the directory "build files"  -->
	</target>
	
	<target name="compile" depends ="init">
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="dist" depends="compile">
		<mkdir dir ="${build}/lib"/>
		<jar jarfile = "${build}/lib/mobilizecarscore.jar" basedir="${build}"/>		
		<fileset dir="${resources}" includes ="*.xml"/>
		<fileset dir="${src}" includes ="*.xml"/>
	</target>
</project>